<Window x:Class="FUMiniHotelManagement.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FUMiniHotelManagement"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid Background="{StaticResource AppBackground}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Height="221">
            <TextBlock Text="Email" Foreground="Gray" Margin="10,10,10,0"/>
            <TextBox x:Name="EmailTextBox" Margin="10" Height="35" >admin@FUMiniHotelSystem.com</TextBox>
            <TextBlock Text="Password" Foreground="Gray" Margin="10,10,10,0"/>
            <PasswordBox x:Name="PasswordBox" Margin="10" Height="35"/>
            <Button Background="{StaticResource AppAccent}" Content="Login" Height="33" Width="230" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
