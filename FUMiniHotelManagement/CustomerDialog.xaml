<Window x:Class="FUMiniHotelManagement.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FUMiniHotelManagement"
        mc:Ignorable="d"
        Title="Customer Information"
        Height="350" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#E3F2FD"
        >
    <Border Background="White" CornerRadius="10" Padding="18">
        <StackPanel>
            <TextBlock Text="Full Name"/>
            <TextBox x:Name="FullNameBox"/>
            <TextBlock Text="Telephone"/>
            <TextBox x:Name="TelephoneBox"/>
            <TextBlock Text="Email"/>
            <TextBox x:Name="EmailBox"/>
            <TextBlock Text="Birthday"/>
            <DatePicker x:Name="BirthdayPicker"/>
            <TextBlock Text="Password"/>
            <PasswordBox x:Name="PasswordBox"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,0,0">
                <Button Content="Save" Width="90" Margin="0,0,8,0" Click="Save_Click"/>
                <Button Content="Cancel" Width="90" Margin="0,0,8,0"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
