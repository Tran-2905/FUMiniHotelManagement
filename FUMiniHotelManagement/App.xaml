<Application x:Class="FUMiniHotelManagement.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FUMiniHotelManagement"
             StartupUri="Login.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="AppAccent" Color="#1976D2"/>
        <SolidColorBrush x:Key="AppBackground" Color="#E3F2FD"/>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#1976D2"/>
        <SolidColorBrush x:Key="LightBlue" Color="#E3F2FD"/>
        <SolidColorBrush x:Key="BlueHover" Color="#1565C0"/>
        <SolidColorBrush x:Key="ButtonText" Color="White"/>
        <Style TargetType="Window">
            <Setter Property="Background" Value="{StaticResource LightBlue}"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="{StaticResource ButtonText}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource BlueHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource LightBlue}"/>
            <Setter Property="RowBackground" Value="#BBDEFB"/>
            <Setter Property="AlternatingRowBackground" Value="#E3F2FD"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#90CAF9"/>
            <Setter Property="VerticalGridLinesBrush" Value="#90CAF9"/>
            <Setter Property="Foreground" Value="#154273"/>
        </Style>
        <DropShadowEffect x:Key="DropShadowEffect"
                    BlurRadius="12" ShadowDepth="3"
                    Color="#888" Opacity="0.3"/>
    </Application.Resources>
</Application>
