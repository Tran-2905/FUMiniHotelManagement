<Window x:Class="FUMiniHotelManagement.Booking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FUMiniHotelManagement"
        mc:Ignorable="d"
        Title="Booking Information"
        Height="600"
        Width="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#E3F2FD">
    <Border Background="White" CornerRadius="10" Padding="20">
        <StackPanel>
            <TextBlock Text="Customer" FontWeight="SemiBold"/>
            <ComboBox x:Name="CustomerComboBox"
                      DisplayMemberPath="CustomerFullName"
                      SelectedValuePath="CustomerId"
                      Width="280" Margin="0,0,0,8"/>

            <TextBlock Text="Booking Date" FontWeight="SemiBold"/>
            <DatePicker x:Name="BookingDatePicker"
                        Width="170" Margin="0,0,0,8"
                        IsEnabled="False"/>

            <TextBlock Text="Room(s)" FontWeight="SemiBold"/>
            <ListBox x:Name="RoomsListBox"
                     DisplayMemberPath="RoomType.RoomTypeName"
                     SelectedValuePath="RoomId"
                     SelectionMode="Multiple"
                     Height="100" Width="280" Margin="0,0,0,8"/>

            <TextBlock Text="Start Date" FontWeight="SemiBold"/>
            <DatePicker x:Name="StartDatePicker" Width="170" Margin="0,0,0,8"/>

            <TextBlock Text="End Date" FontWeight="SemiBold"/>
            <DatePicker x:Name="EndDatePicker" Width="170" Margin="0,0,0,8"/>

            <TextBlock Text="Status" FontWeight="SemiBold"/>
            <ComboBox x:Name="StatusComboBox"
                      Width="170" Margin="0,0,0,8"
                      ItemsSource="{Binding StatusList}"/>

            <TextBlock Text="Total Price" FontWeight="SemiBold"/>
            <TextBox x:Name="TotalPriceBox"
                     IsReadOnly="True"
                     Background="#E3F2FD"
                     Foreground="#1976D2"
                     FontWeight="Bold"
                     Width="170"
                     Margin="0,0,0,12"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,0,0">
                <Button Content="Save" Width="90" Margin="0,0,8,0" Click="Save_Click"/>
                <Button Content="Cancel" Width="90" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>