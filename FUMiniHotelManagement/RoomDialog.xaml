<Window x:Class="FUMiniHotelManagement.RoomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FUMiniHotelManagement"
        mc:Ignorable="d"
                Title="Customer Information"
        Height="350" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#E3F2FD"
        >
    <Border Background="White" CornerRadius="10" Padding="18">
        <StackPanel>
            <TextBlock Text="Room Number"/>
            <TextBox x:Name="RoomNumberBox"/>

            <TextBlock Text="Room Detail Description"/>
            <TextBox x:Name="RoomDetailDescBox"/>

            <TextBlock Text="Max Capacity"/>
            <TextBox x:Name="MaxCapacityBox"/>

            <TextBlock Text="Room Type ID"/>
            <TextBox x:Name="RoomTypeIdBox"/>

            <TextBlock Text="Room Status"/>
            <TextBox x:Name="StatusBox"/>

            <TextBlock Text="Price Per Day"/>
            <TextBox x:Name="PricePerDayBox"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,0,0">
                <Button Content="Save" Width="90" Margin="0,0,8,0" Click="Save_Click"/>
                <Button Content="Cancel" Width="90" Margin="0,0,8,0"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>